{
  "name": "claret-tech-v2",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "dev:https": "next dev --experimental-https",
    "postinstall": "cp node_modules/pdfjs-dist/build/pdf.worker.min.mjs public/pdf.worker.min.mjs 2>/dev/null || true",
    "prebuild": "node scripts/extract-colors-simple.js && node scripts/extract-medium-colors.js",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "NODE_OPTIONS='--max-old-space-size=8192' vitest",
    "test:ci": "npm run test:ci:batch1 && npm run test:ci:batch2 && npm run test:ci:batch3 && npm run test:ci:batch4a && npm run test:ci:batch4b && npm run test:ci:batch5",
    "test:ci:batch1": "NODE_OPTIONS='--max-old-space-size=16384 --expose-gc' vitest run src/components/ui src/components/error src/components/performance --no-file-parallelism",
    "test:ci:batch2": "NODE_OPTIONS='--max-old-space-size=16384 --expose-gc' vitest run src/components/sections --exclude '**/Introduction*.test.*' --exclude '**/IntroductionAnimations*.test.*' --no-file-parallelism",
    "test:ci:batch3": "NODE_OPTIONS='--max-old-space-size=16384 --expose-gc' vitest run src/contexts src/lib/hooks --no-file-parallelism",
    "test:ci:batch4a": "NODE_OPTIONS='--max-old-space-size=16384 --expose-gc' vitest run src/lib --exclude 'src/lib/hooks/**' --exclude 'src/lib/animation-opacity.test.tsx' --exclude 'src/lib/terminal/commands.test.ts' --exclude 'src/lib/utils/validation-utils.test.ts' --no-file-parallelism",
    "test:ci:batch4b": "NODE_OPTIONS='--max-old-space-size=16384 --expose-gc' vitest run src/lib/animation-opacity.test.tsx src/lib/terminal/commands.test.ts src/lib/utils/validation-utils.test.ts --no-file-parallelism",
    "test:ci:batch4": "npm run test:ci:batch4a && npm run test:ci:batch4b",
    "test:ci:batch5": "NODE_OPTIONS='--max-old-space-size=16384 --expose-gc' vitest run src/app --no-file-parallelism",
    "test:api": "NODE_OPTIONS='--max-old-space-size=16384 --expose-gc' vitest run src/app/api --no-file-parallelism",
    "test:utils": "NODE_OPTIONS='--max-old-space-size=16384 --expose-gc' vitest run src/lib --exclude 'src/lib/animation-manager.test.ts' --exclude 'src/lib/hooks/**' --exclude '**/*.test.tsx' --no-file-parallelism",
    "test:lib-dom": "NODE_OPTIONS='--max-old-space-size=16384 --expose-gc' vitest run src/lib/**/*.test.tsx --no-file-parallelism",
    "test:components": "npm run test:components:batch1 && npm run test:components:batch2 && npm run test:components:batch3 && npm run test:components:batch4",
    "test:components:batch1": "NODE_OPTIONS='--max-old-space-size=5120 --expose-gc' vitest run src/components/ui/button.test.tsx src/components/ui/cookie-notice.test.tsx src/components/ui/navigation.test.tsx src/components/ui/theme-provider.test.tsx src/components/ui/network-controls.test.tsx src/components/ui/toast.test.tsx --no-file-parallelism",
    "test:components:batch2": "NODE_OPTIONS='--max-old-space-size=5120 --expose-gc' vitest run src/components/ui/legal-modals-provider.test.tsx src/components/ui/legal-modal.test.tsx src/components/ui/pdf-modal.test.tsx src/components/ui/theme-management.test.tsx src/components/ui/performance-monitor.test.tsx src/components/ui/animated-favicon.test.tsx src/components/ui/app-wrapper.test.tsx --no-file-parallelism",
    "test:components:batch3": "NODE_OPTIONS='--max-old-space-size=5120 --expose-gc' vitest run src/components/sections/Projects.test.tsx src/components/sections/Skills.test.tsx src/components/sections/IntroductionContent.test.tsx src/components/sections/Experience.test.tsx src/components/sections/Papers.test.tsx src/components/sections/Contact.test.tsx --no-file-parallelism",
    "test:components:batch4": "NODE_OPTIONS='--max-old-space-size=5120 --expose-gc' vitest run src/components/sections/IntroductionAnimations.test.tsx src/components/performance/PerformanceReportModal.test.tsx src/components/error/ErrorFallback.test.tsx src/components/error/ErrorBoundary.test.tsx --no-file-parallelism",
    "test:contexts": "NODE_OPTIONS='--max-old-space-size=16384 --expose-gc' vitest run src/contexts --no-file-parallelism",
    "test:hooks": "NODE_OPTIONS='--max-old-space-size=16384 --expose-gc' vitest run src/lib/hooks --no-file-parallelism",
    "test:unit": "NODE_OPTIONS='--max-old-space-size=8192' vitest run src/**/*.test.ts --exclude '**/*.test.tsx' --exclude 'src/lib/hooks/**' --no-file-parallelism",
    "test:dom-only": "NODE_OPTIONS='--max-old-space-size=8192' vitest run **/*.test.tsx",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=8192' vitest watch",
    "test:stderr-check": "npm test 2>&1 | grep -E '(Error:|Warning:|stderr)' | head -20 || echo 'No stderr errors found - clean output achieved!'",
    "test:coverage-report": "NODE_OPTIONS='--max-old-space-size=8192' vitest run --coverage",
    "test:performance": "NODE_OPTIONS='--max-old-space-size=8192' vitest run",
    "test:sequential": "npm run test:unit && npm run test:e2e",
    "pretest": "rm -rf .next test-results coverage",
    "test:clean": "npm run pretest && npm test",
    "test:e2e": "playwright test",
    "test:e2e:quick": "playwright test --project=chromium",
    "test:e2e:full": "playwright test",
    "test:e2e:ci": "playwright test --project=chromium --reporter=dot",
    "test:e2e:lighthouse": "playwright test lighthouse.spec.ts --project=chromium",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:performance": "playwright test --grep 'Lighthouse|Safari-Specific'",
    "test:load": "playwright test --grep 'Load Testing'",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "lighthouse": "npx lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "lighthouse:ci": "npx lighthouse http://localhost:3000 --config-path=lighthouse.config.js --output json --output-path ./lighthouse-ci.json",
    "performance:report": "node scripts/generate-performance-report.js",
    "load:test": "artillery run artillery.yml",
    "load:test:dev": "artillery run artillery.yml --environment development",
    "prepare": "husky install",
    "clean": "rm -rf .next node_modules/.cache tsconfig.tsbuildinfo",
    "clean:all": "rm -rf .next node_modules package-lock.json tsconfig.tsbuildinfo",
    "fetch:publications": "node scripts/fetch-publications.js"
  },
  "dependencies": {
    "@mlc-ai/web-llm": "^0.2.79",
    "@tailwindcss/typography": "^0.5.16",
    "@types/js-cookie": "^3.0.6",
    "@vercel/analytics": "^1.5.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "clsx": "^2.1.1",
    "colorthief": "^2.6.0",
    "framer-motion": "^12.23.9",
    "js-cookie": "^3.0.5",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.400.0",
    "next": "^15.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-pdf": "^10.0.1",
    "tailwind-merge": "^2.6.0",
    "typewriter-effect": "^2.22.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@next/bundle-analyzer": "^15.3.5",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/colorthief": "^2.6.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.16.0",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.0.1",
    "canvas": "^2.11.2",
    "dotenv": "^17.2.1",
    "eslint": "^8",
    "eslint-config-next": "15.0.4",
    "happy-dom": "^18.0.1",
    "husky": "^8.0.0",
    "jsdom": "^24.1.3",
    "lighthouse": "^12.8.1",
    "lint-staged": "^16.1.2",
    "playwright-lighthouse": "^4.0.0",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "puppeteer": "^24.16.1",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  }
}
